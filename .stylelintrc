{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "block-no-empty": null,
        "at-rule-empty-line-before": null,
        "rule-non-nested-empty-line-before": null,
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": [
                    "host"
                ]
            }
        ]
    }
}
